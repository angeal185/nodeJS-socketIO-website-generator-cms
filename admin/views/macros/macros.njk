{%- macro css(s) -%}
<link rel="stylesheet" href="/css/{{s}}.css">
{%- endmacro -%}
{%- macro cssT(s) -%}
<link rel="stylesheet" href="{{s}}">
{%- endmacro -%}
{%- macro js(s) -%}
<script src="/js/{{s}}.js"></script>
{%- endmacro -%}
{%- macro jsT(s) -%}
<script src="{{s}}.js"></script>
{%- endmacro -%}

{%- macro lnk(item) -%}
  <li><a href="{{item}}">{{item|capitalize}}</a></li>
{%- endmacro -%}

{%- macro or() -%}
<p class="text-center or"><span>OR</span></p>
{%- endmacro -%}

{%- macro video(i) -%}
<label>{{i|capitalize}} video ID:</label>
<input type="text" class="form-control margin-bottom-20" id="{{i}}ID" placeholder="Enter {{i|capitalize}} video ID">
{%- endmacro -%}

{%- macro toTop() -%}
<a href="#"id="scroll-to-top" class='scroll-to-top fa fa-chevron-up'></a>
{%- endmacro -%}
